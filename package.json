{
  "name": "prettier-eslint",
  "version": "1.1.0",
  "description": "Atom package to format your JavaScript using Prettier and ESLint (with eslint --fix)",
  "main": "./dist/prettier-eslint-atom.js",
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "precommit": "opt --in pre-commit --exec \"npm start validate\""
  },
  "files": [
    "dist",
    "keymaps",
    "menus"
  ],
  "keywords": [
    "atom",
    "javascript",
    "prettier",
    "eslint",
    "formatter"
  ],
  "author": "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
  "license": "MIT",
  "engines": {
    "atom": ">=0.174.0 < 2.0.0"
  },
  "dependencies": {
    "find-root": "^1.0.0",
    "loophole": "^1.1.0",
    "minimatch": "^3.0.3",
    "prettier-eslint": "^2.3.3"
  },
  "devDependencies": {
    "all-contributors-cli": "^3.0.7",
    "babel-cli": "^6.22.2",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-2": "^6.22.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.13.1",
    "eslint-config-kentcdodds": "^11.1.0",
    "husky": "^0.12.0",
    "opt-cli": "^1.5.1",
    "p-s": "^3.0.3",
    "prettier-eslint-cli": "^1.0.2",
    "rimraf": "^2.5.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "kentcdodds"
    ],
    "globals": {
      "atom": false
    },
    "rules": {
      "max-len": [
        2,
        80
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "configSchema": {
    "formatOnSave": {
      "title": "Format on Save",
      "description": "Format Javascript files when saving",
      "type": "boolean",
      "default": false,
      "order": 1
    },
    "formatOnSaveScopes": {
      "title": "Format-on-Save Scopes",
      "description": "List of scopes for which Pretter will automatically format on save. Note: 'Format on Save' must be enabled for this to have effect. Use `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "source.js",
        "source.jsx",
        "source.js.jsx",
        "source.babel",
        "source.js-semantic"
      ],
      "items": {
        "type": "string"
      },
      "order": 2
    },
    "excludedGlobs": {
      "title": "Exclude (list of globs)",
      "description": "A list of file globs to exclude from formatting on save (takes precedence over scopes). Use commas to seperate each glob",
      "type": "array",
      "default": [],
      "order": 3
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kentcdodds/prettier-eslint-atom.git"
  },
  "bugs": {
    "url": "https://github.com/kentcdodds/prettier-eslint-atom/issues"
  },
  "homepage": "https://github.com/kentcdodds/prettier-eslint-atom#readme"
}
